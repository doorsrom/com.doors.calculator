<?xml version="1.0" encoding="utf-8"?><!--<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="95">

    <LinearLayout
        android:id="@+id/converter_textWrapper_top"
        android:onClick="newInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/converter_text_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:fontFamily="sans-serif-light"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/converter_top_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/converter_textWrapper_low"
        android:onClick="newInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/converter_text_low"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/converter_low_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="15dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="#1f1f1f"
        android:columnCount="3"
        android:rowCount="5">

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <LinearLayout
            android:id="@+id/converter_btn_CE"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="CE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_DEL"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="DEL" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_7"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_8"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_9"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_4"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_5"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_6"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_1"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_2"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_3"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:onClick="newInput"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_0"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/converter_btn_point"
            android:onClick="newInput"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:theme="@style/AppTheme.standard_Buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="." />
        </LinearLayout>

    </GridLayout>
</LinearLayout>