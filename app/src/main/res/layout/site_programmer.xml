<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textSize="54sp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:textAlignment="viewEnd" />

        <Button
            android:id="@+id/hexOutput"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="textStart"
            android:text="@string/hex" />

        <Button
            android:id="@+id/decOutput"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAlignment="textStart"
            android:background="@color/colorPrimaryDark"
            android:text="@string/dec" />

        <Button
            android:id="@+id/octOutput"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAlignment="textStart"
            android:background="@color/colorPrimaryDark"
            android:text="@string/oct" />

        <Button
            android:id="@+id/binOutput"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAlignment="textStart"
            android:background="@color/colorPrimaryDark"
            android:text="@string/bin" />

        <TableRow
            android:id="@+id/buttonsModes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/decInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/binInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/changeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QWORD" />

            <Button
                android:id="@+id/msButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MS" />

            <Button
                android:id="@+id/mButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

        </TableRow>

        <TableRow
            android:id="@+id/programmerModes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/lshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lsh" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/rshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rsh" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/orButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/xorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xor" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/notButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/andButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="And" />
        </TableRow>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>