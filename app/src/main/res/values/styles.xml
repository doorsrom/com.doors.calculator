<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.standard_Buttons" parent="AppTheme">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.nav_Items" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Theme.ItemBold" parent="Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@string/bold_textStyle</item>
    </style>
</resources>
